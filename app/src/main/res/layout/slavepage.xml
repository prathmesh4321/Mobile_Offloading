<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group60.project.Slave">

    <ImageButton
        android:id="@+id/listeningbutton"
        android:layout_width="108dp"
        android:layout_height="118dp"
        android:src="?android:attr/fingerprintAuthDrawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.255" />

    <ToggleButton
        android:id="@+id/bluetoothswitch"
        android:layout_width="253dp"
        android:layout_height="64dp"
        android:text="ToggleButton"
        android:textOff="Bluetooth OFF"
        android:textOn="Bluetooth ON"
        app:layout_constraintBottom_toTopOf="@+id/listeningbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756" />

    <TextView
        android:id="@+id/statusslave"
        android:layout_width="148dp"
        android:layout_height="39dp"
        android:text="Status"
        app:layout_constraintBottom_toTopOf="@+id/slaveLattitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listeningbutton" />

    <TextView
        android:id="@+id/slaveLattitude"
        android:layout_width="145dp"
        android:layout_height="38dp"
        android:text="My Lattitude"
        app:layout_constraintBottom_toTopOf="@+id/slavelongitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listeningbutton"
        app:layout_constraintVertical_bias="0.769" />

    <TextView
        android:id="@+id/slavelongitude"
        android:layout_width="146dp"
        android:layout_height="43dp"
        android:text="My Longitude"
        app:layout_constraintBottom_toTopOf="@+id/slavebattery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listeningbutton"
        app:layout_constraintVertical_bias="0.837" />

    <TextView
        android:id="@+id/slavebattery"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:text="My Battery"
        app:layout_constraintBottom_toTopOf="@+id/sendbatteryinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listeningbutton"
        app:layout_constraintVertical_bias="0.755" />

    <Button
        android:id="@+id/sendbatteryinfo"
        android:layout_width="187dp"
        android:layout_height="61dp"
        android:text="SEND BATTERY INFO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listeningbutton"
        app:layout_constraintVertical_bias="0.618" />

    <TextView
        android:id="@+id/slavelog"
        android:layout_width="194dp"
        android:layout_height="69dp"
        android:text="Log"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendbatteryinfo"
        app:layout_constraintVertical_bias="0.379" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:text="SLAVE MODE"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/bluetoothswitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641" />
</androidx.constraintlayout.widget.ConstraintLayout>